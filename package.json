{
  "name": "hylia",
  "version": "0.4.4",
  "description": "A simple Eleventy starter kit to help you have a blog of your own",
  "main": "index.js",
  "dependencies": {
    "@11ty/eleventy": "^0.8.3",
    "@11ty/eleventy-plugin-rss": "^1.0.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "@tbranyen/jsdom": "^13.0.0",
    "concurrently": "^4.1.0",
    "html-minifier": "^4.0.0",
    "json-to-scss": "^1.3.1",
    "sass": "^1.21.0",
    "slugify": "^1.3.4",
    "stalfos": "github:andybelldesign/stalfos#c8971d22726326cfc04089b2da4d51eeb1ebb0eb",
    "tailwindcss": "^1.1.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "chokidar-cli": "^1.2.2",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "make-dir-cli": "^2.0.0",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "prettier": "^1.18.2",
    "rollup": "^1.16.1",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^5.0.3"
  },
  "scripts": {
    "sass:tokens": "npx json-to-scss src/_data/tokens.json src/scss/_tokens.scss",
    "sass:process": "npm run sass:tokens && sass src/scss/global.scss src/_includes/assets/css/global.css --style=compressed",
    "cms:precompile": "make-dir dist/admin && nunjucks-precompile src/_includes > dist/admin/templates.js -i '\\.(njk|css|svg)$'",
    "cms:bundle": "rollup --config",
    "start": "concurrently 'npm run tailwind' 'npm run sass:process -- --watch' 'npm run cms:bundle -- --watch' 'chokidar \"src/_includes/**\" -c \"npm run cms:precompile\"' 'npm run serve'",
    "serve": "cross-env ELEVENTY_ENV=development npx eleventy --serve",
    "production": "npm run tailwind:production && npm run sass:process && npm run cms:precompile && npm run cms:bundle && npx eleventy",
    "tailwind": "postcss src/css/site.css --output src/_includes/assets/css/site.css --map",
    "tailwind:production": "NODE_ENV=production postcss src/css/tailwind.css --output src/_includes/assets/css/tailwind.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/megalofauna/windwalker.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/megalofauna/windwalker/issues"
  },
  "homepage": "https://github.com/megalofauna/windwalker#readme"
}
