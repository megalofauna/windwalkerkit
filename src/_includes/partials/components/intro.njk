<header class="[ intro ] container mt-8 md:mt-10 lg:mt-12">
  <div class="md:max-w-xl lg:max-w-3xl">
    <h1 class="intro__heading{{ ' intro__heading--compact' if page.url === '/' }}">{{ introHeading }}</h1>
    {% if introSummary %}
      <div class="[ intro__summary ] mt-6 [ leading-mid measure-short ]">{{ introSummary | safe }}</div>
    {% endif %}
  </div>
</header>