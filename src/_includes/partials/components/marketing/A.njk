{% if marketing.items %}
  <section data-index="1" id="marketing-1" class="marketing-section mt-16 container">
    <div class="-ml-8 -mr-8 flex flex-wrap">
      {% for item in marketing.items %}
        <article class="flex p-8 w-full md:w-1/2 xl:w-1/3">
          <span class="flex-shrink-0 h-16 w-16 rounded-full shadow">
            <img class="w-full h-auto" src="images/{{ item.imageFileName }}" alt="{{ item.alt }}">
          </span>
          <div class="ml-8">
            <h3 class="text-lg text-body lg:text-2xl">{{ item.title }}</h3>
            <p class="text-tint mt-2">{{ item.description }}</p>
          </div>
        </article>
      {% endfor %}
    </div>
  </section>
{% endif %}