{% if marketing.items %}
  <section data-index="2" id="marketing-2" class="hidden marketing-section mt-16 container">
    <div class="-ml-8 -mr-8 flex flex-wrap">
      {% for item in marketing.items %}
        <article class="flex px-8 py-12 w-full md:w-1/2 xl:w-1/3">
          <div class="relative p-8 pt-16 bg-white shadow rounded">
            <span class="-mt-16 ml-6 absolute top-0 left-0 block mx-auto flex-shrink-0 h-32 w-32 rounded-full shadow">
              <img class="w-full h-auto" src="images/{{ item.imageFileName }}" alt="{{ item.alt }}">
            </span>
            <div class="mt-8">
              <h3 class="text-lg text-body lg:text-2xl">{{ item.title }}</h3>
              <p class="text-tint mt-4">{{ item.description }}</p>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </section>
{% endif %}