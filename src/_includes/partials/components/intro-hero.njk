<header class="site-hero bleed-full relative py-24 md:py-32 bg-intro text-intro border-b border-primary shadow-inner">
  <span class="absolute inset-0 block w-full h-full z-10" style="background-image: url(images/noise-overlay.png)"></span>
  <span class="absolute inset-0 block w-full h-full z-0" style="background-image: url(images/plaster.webp); mix-blend-mode: multiply"></span>
  <div class="relative lg:flex lg:justify-center">
    {% if heroImage %}
      <div class="px-16 max-w-3xl mx-auto lg:mx-0 lg:w-1/2 flex-shrink-0">
        {% include heroImage %}
      </div>
    {% endif %}
    <div class="px-16 z-50 mt-8 lg:mt-0 max-w-3xl">
      <h1 class="text-body text-2xl intro__heading{{ ' intro__heading--compact' if page.url === '/' }}">{{ introHeading }}</h1>
      {% if introSummary%}
        <p class="mt-4 text-subheading text-xl md:text-2xl leading-tight">{{ introSummary | safe }}</p>
      {% endif %}
    </div>
  </div>
</header>