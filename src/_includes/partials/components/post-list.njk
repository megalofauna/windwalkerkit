{% if postListItems.length %}
  <section class="container mb-8 md:mb-12 lg:mb-16 py-8 md:py-12 lg:py-16">
    <div>
      <h2 class="text-xl lg:text-2xl">
        <span class="pb-2 border-b-4 border-primary-400">{{ postListHeading }}</span></h2>
      <ol class="mt-8 md:mt-10 lg:mt-12" reversed>
        {% for item in postListItems %}
          {% if item
            .date
            .getTime() <= global
            .now %}
            {% if loop.first %}
              <li>
              {% else %}
                <li class="mt-4 md:mt-6 lg:mt-8">
                {% endif %}
                <h3 class="text-xl md:text-2xl lg:text-3xl leading-tight">
                  <a href="{{ item.url }}" class="post-list__link" rel="bookmark">{{ item.data.title }}</a>
                </h3>
                <p class="mt-2 text-xs md:text-base lg:text-lg text-neutral-500">
                  <time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
                </p>
              </li>
            {% endif %}
          {% endfor %}
        </ol>
      </div>
    </section>
  {% endif %}