<header class="bleed-full bg-intro-bleed border-b border-primary">
  <div class="container mx-auto px-8 py-16 md:py-24 lg:py-32">
    <h1 class="text-intro-bleed intro__heading{{ ' intro__heading--compact' if page.url === '/' }}">{{ introHeading }}</h1>

    {% if date %}
      {% include "partials/windwalker/documentation-meta.njk" %}
    {% endif %}

    {% if subHead %}
      <span class="mt-4 inline-block text-subheading text-2xl md:text-3xl lg:text-4xl max-w-measure">
        {{ subHead | safe }}
      </span>
    {% endif %}
    {% if introSummary %}
      <div class="max-w-sm md:max-w-md lg:max-w-xl mt-4 text-subheading text-xl md:text-2xl leading-tight">{{ introSummary | safe }}</div>
    {% endif %}
  </div>
</header>