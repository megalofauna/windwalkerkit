<a class="skip-link" href="#main-content">Skip to content</a>
<header role="banner" class="py-4 bg-header text-header border-b border-primary">
  <div class="px-8 md:px-12 lg:px-16">
    <span class="visually-hidden">{{ site.name }}: {{ pageType }}</span>
    <div class="[ site-head__inner ] md:flex md:justify-between md:items-center ]">
      <a href="/" class="block w-auto" {{ 'aria-current=page' if page.url == '/' | safe }}>
        <span class="visually-hidden">{{ 'Back to homepage' if page.url != '/' else 'Homepage' }}</span>
        <span class="inline-block flex items-center" aria-hidden="true">
          <span class="inline-block w-16 h-16 mr-3">{% include "icons/site-logo.svg" %}</span>
          <span class="font-bold text-xl">{{ site.name }}</span>
        </span>
      </a>
      {% include "partials/components/nav.njk" %}
    </div>
  </div>
</header>