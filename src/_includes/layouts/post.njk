              {% for item in tags %}
                {% if loop.first %}
                  <li class="">
                    <a class="" href="/tags/{{ item }}">{{ item }}</a>
                  </li>
                {% else %}
                  <li class="mt-3">
                    <a class="" href="/tags/{{ item }}">{{ item }}</a>
