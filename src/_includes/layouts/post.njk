        </div>
      </aside>
      <div class="mt-8 xl:mt-0 content xl:pl-12 xl:pr-8 {{ 'pad-bottom-900' if not site.enableThirdPartyComments }} [ e-content ]">
        {{ content | safe }}
      </div>
      {% if site.enableThirdPartyComments %}
